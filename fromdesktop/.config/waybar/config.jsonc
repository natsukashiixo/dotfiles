[
  {
    "layer": "top",
    "name": "mainbar",
    // "fixed-center": false,
    "position": "top",
    "height": 30,
    "margin-left": 5,
    "margin-right": 5,
    "margin-top": 5,
    "margin-bottom": 0,
    "output": "DP-3",
    "modules-left": [
      "pulseaudio",
      "backlight",
      "custom/pacman-updates",
      "custom/pacman-orphans",
    ],
    "modules-center": ["group/centermods"],
    "modules-right": [
      "custom/colortemp",
      "custom/gamma",
      "network",
      "group/hardware",
      "clock",
    ],
    "reload_style_on_change": true,
    "hyprland/workspaces": {
      "disable-scroll": true,
      "disable-click": false,
      "format": "{icon}",
      "format-icons": {
        "1": "I",
        "2": "II",
        "3": "III",
        "4": "IV",
        "5": "V",
        "6": "VI",
        "7": "VII",
        "8": "VIII",
        "9": "IX",
        "10": "X",
        "11": "XI",
        "12": "XII",
        "13": "XIII",
        "14": "XIV",
        "15": "XV",
        "16": "XVI",
        "17": "XVII",
        "18": "XVIII",
        "19": "XIX",
        "20": "XX",
        "default": "{id}",
      },
    },
    "tray": {
      "spacing": 10,
    },
    "clock": {
      "format": "{:%a %Y %b %d %R}",
    },
    "cpu": {
      "format": "Ôãõ {usage}%",
    },
    "memory": {
      "format": "Óâ¶ {percentage}%",
    },
    "custom/gpu-usage": {
      "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits",
      "format": "Û∞çõ {}%",
      "return-type": "",
      "interval": 4,
    },
    "temperature": {
      "critical-threshold": 75,
      "format": "Ôãâ {temperatureC}¬∞C",
    },
    "battery": {
      "bat": "BAT0",
      "full-at": 95,
      "states": {
        "good": 95,
        "warning": 30,
        "critical": 15,
      },
      "format": "{icon} {capacity}%",
      "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "],
    },
    "network": {
      "format-ethernet": "Óºâ ",
      "format-wifi": "Ôá´¬† {essid}",
      "format-disconnected": "‚ö† Disconnected",
    },
    "pulseaudio": {
      "format": "{icon} {volume}%",
      "format-muted": "ÔÄ¶",
      "format-icons": {
        "headphones": "ÔÄ•",
        "default": ["ÔÄß", "ÔÄ®"],
      },
      "on-click": "~/.config/waybar/scripts/pavutoggle.py",
    },
    "backlight": {
      "device": "amdgpu_bl0",
      "format": "{icon} {percent}%",
      "format-icons": ["Óéç ", "Óèú ", "ÔÜÖ "],
    },
    "custom/pacman-updates": {
      "format": "Û∞£á Updates: {}",
      "exec": "checkupdates | wc -l",
      "interval": 600,
    },
    "custom/pacman-orphans": {
      "format": "Û∞£á Orphans: {}",
      "exec": "pacman -Qdtq | wc -l",
      "interval": 600,
    },
    "custom/colortemp": {
      "format": "Û∞ñß {}K",
      "on-click": "~/.config/waybar/scripts/hyprshade.py temperature 4000 toggle",
      "on-click-right": "~/.config/waybar/scripts/hyprshade.py temperature 6300",
      "on-scroll-up": "~/.config/waybar/scripts/hyprshade.py temperature +100",
      "on-scroll-down": "~/.config/waybar/scripts/hyprshade.py temperature -100",
      "exec": "~/.config/waybar/scripts/hyprshade.py temperature",
      "exec-on-event": false,
      "exec-if": "pidof hyprsunset",
      "interval": "once",
      "tooltip": false,
      "signal": 4,
    },
    "custom/gamma": {
      "format": "ÔÜÖ {}%",
      "on-click": "~/.config/waybar/scripts/hyprshade.py gamma 70 toggle",
      "on-click-right": "~/.config/waybar/scripts/hyprshade.py gamma 100",
      "on-scroll-up": "~/.config/waybar/scripts/hyprshade.py gamma +10",
      "on-scroll-down": "~/.config/waybar/scripts/hyprshade.py gamma -10",
      "exec": "~/.config/waybar/scripts/hyprshade.py gamma",
      "exec-on-event": false,
      "exec-if": "pidof hyprsunset",
      "interval": "once",
      "tooltip": false,
      "signal": 3,
    },
    "group/hardware": {
      "orientation": "horizontal",
      "modules": ["temperature", "cpu", "memory", "custom/gpu-usage"],
    },
    "group/centermods": {
      "orientation": "horizontal",
      "modules": ["cava", "hyprland/workspaces", "custom/fcitx-lang"],
    },
    "custom/fcitx-lang": {
      "format": "{}",
      "exec": "~/.config/waybar/scripts/getlang.py",
      "signal": 5,
    },
    "cava": {
// doesnt load it seems, maybe it can only parse .conf? "cava_config": "~/.config/cava/config",
        "framerate": 60,
        "autosens": 1,
        // "sensitivity": 100,
        "bars": 6,
        "lower_cutoff_freq": 100,
        "higher_cutoff_freq": 8500,
        "method": "pulse",
        "source": "auto",
        "stereo": false,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà" ],
        //"format-icons":   ["‚£Ä", "‚£†", "‚£§", "‚£¥", "‚£∂", "‚£æ", "‚£ø", "‚†ø" ],
        //"format-icons": [" ", "üÆÜ", "üÆÖ", "üÆÑ", "üÆÉ", "üÆÇ", "ü≠∂", " " ],
        "actions": {
                   "on-click-right": "mode"
                   }
    },
    // end of main monitor bar
  },

  // vertical monitor bar

  {
    "layer": "top",
    "position": "top",
    "height": 30,
    "margin-left": 0,
    "margin-right": 0,
    "margin-top": 5,
    "margin-bottom": 0,
    "output": "HDMI-A-1",
    "modules-center": ["hyprland/workspaces"],
    "reload_style_on_change": true,
    "hyprland/workspaces": {
      "disable-scroll": true,
      "disable-click": false,
      "format": "{icon}",
      "format-icons": {
        "1": "I",
        "2": "II",
        "3": "III",
        "4": "IV",
        "5": "V",
        "6": "VI",
        "7": "VII",
        "8": "VIII",
        "9": "IX",
        "10": "X",
        "11": "XI",
        "12": "XII",
        "13": "XIII",
        "14": "XIV",
        "15": "XV",
        "16": "XVI",
        "17": "XVII",
        "18": "XVIII",
        "19": "XIX",
        "20": "XX",
        "default": "{id}",
      },
    },
  },
]
